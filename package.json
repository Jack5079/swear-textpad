{
  "name": "swear-textpad",
  "productName": "Swear Textpad",
  "version": "1.1.0",
  "description": "remove swears in a textarea",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . --icon=assets/icon.ico -all",
    "build:host": "electron-packager . --icon=assets/icon.ico",
    "build:win": "electron-packager . --icon=assets/icon.ico --platform=win32",
    "build:mac": "electron-packager . --icon=assets/icon.ico --platform=darwin",
    "build:linux": "electron-packager . --icon=assets/icon.ico --platform=linux"
  },
  "author": "Jack5079",
  "devDependencies": {
    "electron": "^5.0.7",
    "electron-packager": "14.0.0"
  },
  "dependencies": {
    "profanity-util": "^0.2.0"
  }
}